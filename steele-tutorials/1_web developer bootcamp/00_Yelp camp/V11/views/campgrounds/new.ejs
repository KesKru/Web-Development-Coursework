<% include ../partials/header %>

<div class="container top-offset">
    <div class="row">
        <div class="col p-0">
            <div class="card m-3">
                <div class="card-body">
                    <h5 class="card-title">New campground</h5>
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="newCampground[name]" placeholder="Campground name">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="newCampground[image]" placeholder="Image URL">
                        </div>
                        <div class="form-group">
                            <textarea rows="5" cols="1" class="form-control" name="newCampground[description]"
                                placeholder="Desciption"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-primary" href="/campgrounds">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>