<% include partials/header %>


<div class="ui container top-offset">
    <div class="ui grid centered">
        <div class="ten wide column">
            <form class="ui form" action="/posts" method="POST">
                <div class="field">
                    <label>Image URL</label>
                    <input type="text" name="blogPost[image]" placeholder="First Name">
                </div>
                <div class="field">
                    <label>Post title</label>
                    <input type="text" name="blogPost[author]" placeholder="Last Name">
                </div>
                <div class="field">
                <label>Description</label>
                <textarea type="text" name="blogPost[body]" placeholder="Write a short description"></textarea>
                </div>
                <button class="ui button" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>


